    <h1>Add New Food Item</h1>
    <hr>
    <%= form_for @food do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :category %>


      <%= f.select(:category, [["Entree", "entree"],["Appetizer", "appetizer" ], ["Dessert", "dessert" ] ] ) %></br>


      <%= f.label :price %>
      $ <%= f.number_field :price %></br>

      <%= f.label :description %>
      <%= f.text_field :description %></br>


      <%= f.submit %>
    <% end %>
