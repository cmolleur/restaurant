<div class="page-headers">
    <h1>Menu</h1>
    <%= button_to "ADD ITEM", new_food_path, class: "button-primary", :method => :get %>
</div>

<table class="u-full-width">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%=food.name%></td>
        <td><%=food.category%></td>
        <td><%=food.description%></td>
        <td>$ <%=food.price%></td>
        <td><%= link_to "View", food_path(food.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
