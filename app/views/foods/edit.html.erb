    <h1>Edit Food Item</h1>
    <hr>
    <%= form_for @food do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :category %>



      <%= f.select("category", %w[appetizer entree dessert], {}, { index: nil }) %></br>


      <%= f.label :price %>
      $ <%= f.number_field :price %></br>

      <%= f.label :description %>
      <%= f.text_field :description %></br>


      <%= f.submit method: :post %>
    <% end %>
