<div class="signup">
  
  <h3>Login</h3>
  <%= form_tag '/sessions', method: :post do %>

    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </br>

    <%= submit_tag "Log In" %></br>
    <%= link_to "Don't have an account?", new_user_path %>

  <% end %>

</div>
