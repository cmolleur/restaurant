
<!-- username email password -->
<div class="signup">
  <h3>Signup</h3>
  <%= form_for @user do |f| %>
    <%= f.text_field :name, :placeholder => "Full Name" %></br>

    <%= f.text_field :username, :placeholder => "Username" %></br>

    <!-- note that this is a password field, dont mess this up! -->
    <%= f.password_field :password, :placeholder => "Password" %></br>

    <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %>
    </br>
    <%= f.submit %>
    </br>

    <%= link_to "Already have an account?", log_in_path %>
  <% end %>
</div>
